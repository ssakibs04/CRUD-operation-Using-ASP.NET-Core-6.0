@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p=4">
    <div class="row p-3">
        <div class="col p-6">

        <h2 calss="text-primary">Categories</h2>
        </div>
        <div class="col r-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle-fill"></i> &nbsp;Create New Category</a>
        </div>

    </div>

</div>
<table class="table table-bordered table-striped table table-hover" style="width:100%">
    <thead class="border-bottom-0">

 <tr>
     <th>
         Catergory Name
     </th>
     <th>
         Display Order 
     </th>
     <th>
         Created Date (MM/DD/YY)
     </th>
     <th>Action</th>
 </tr>
    </thead>

    <tbody>
        @foreach(var items in Model)
        {
            
        
        <tr>
            <td>
                @items.Name
            </td>
            <td>
                @items.DisplayOrder
            </td>
            <td>
                @items.CreatedDate
            </td>
            <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@items.ID">  <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@items.ID">  <i class="bi bi-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>


